<section class="vh-80">
  <div class="container py-5 h-80">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <h3 class="mb-3">Login</h3>
            <form action="/login" method="post">
            {{#if status}}
              <p class="text-danger text-center" >Incorrect username or Password</p>
              {{/if}}
            <div class="form-outline mb-4">
              <input type="text" name="name"  class="form-control form-control-lg" placeholder="Enter Username" />
            </div>

            <div class="form-outline mb-4">
              <input type="password" name="password" class="form-control form-control-lg" placeholder="Enter Password" />
            </div>

            <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
            </form>
            <a href="/auth/github" class="btn btn-lg btn-block btn-primary mt-1" style="background-color: #020202;"
              type="submit"><i class="fa-brands fa-github"></i>&nbsp; Sign in with Github</a>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>